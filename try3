public class RemoveCharactersAfterElement {
    public static void main(String[] args) {
        // Your input string
        String inputString = "";

        // Specify the element or marker after which you want to remove characters
        String elementToRemoveAfter = "</";

        // Remove characters after the element
        String cleanedString = removeCharactersAfterElement(inputString, elementToRemoveAfter);

        // Print the cleaned string
        System.out.println(cleanedString);
    }

    public static String removeCharactersAfterElement(String inputString, String elementToRemoveAfter) {
        int indexOfElement = inputString.indexOf(elementToRemoveAfter);

        if (indexOfElement != -1) {
            // Use substring to remove characters after the element
            return inputString.substring(0, indexOfElement + elementToRemoveAfter.length());
        } else {
            // Element not found, return the original string
            return inputString;
        }
    }
}
