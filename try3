import org.apache.poi.ss.usermodel.*;
import org.apache.poi.xssf.usermodel.XSSFWorkbook;

import java.io.FileInputStream;
import java.io.IOException;

public class ExcelDataFetcher {
    public static String fetchExcelDataToString(String filePath, int sheetNumber) {
        StringBuilder dataStringBuilder = new StringBuilder();

        try {
            FileInputStream fileInputStream = new FileInputStream(filePath);
            Workbook workbook = new XSSFWorkbook(fileInputStream);
            Sheet sheet = workbook.getSheetAt(sheetNumber);

            for (Row row : sheet) {
                for (Cell cell : row) {
                    if (cell.getCellType() == CellType.STRING) {
                        String cellValue = cell.getStringCellValue();
                        dataStringBuilder.append(cellValue).append(" "); // Append cell data to the string
                    }
                }
                dataStringBuilder.append("\n"); // Add a new line for each row
            }

            workbook.close();
        } catch (IOException e) {
            e.printStackTrace();
        }

        return dataStringBuilder.toString();
    }

    public static void main(String[] args) {
        String filePath = "your_excel_file.xlsx"; // Replace with your file path
        int sheetNumber = 0; // Replace with the sheet number you want to read

        String excelData = fetchExcelDataToString(filePath, sheetNumber);
        System.out.println(excelData);
    }
}
