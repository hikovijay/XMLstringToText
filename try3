public class RemoveHtmlTagsWithReplaceAll {
    public static void main(String[] args) {
        // Your input string containing HTML tags
        String inputString = "<p>This is <b>bold</b> and <i>italic</i>.</p>";

        // Remove HTML tags using replaceAll
        String cleanedString = removeHtmlTags(inputString);

        // Print the cleaned string
        System.out.println(cleanedString);
    }

    public static String removeHtmlTags(String inputString) {
        // Regular expression to match HTML tags
        String htmlTagPattern = "<[^>]+>";

        // Use replaceAll to remove HTML tags
        String cleanedString = inputString.replaceAll(htmlTagPattern, "");

        return cleanedString;
    }
}
