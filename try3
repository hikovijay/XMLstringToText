import java.util.regex.Pattern;
import java.util.regex.Matcher;

public class RemoveCharacters {
    public static String removeChars(String input, String charsToRemove) {
        String regex = "[" + Pattern.quote(charsToRemove) + "]";
        return input.replaceAll(regex, "");
    }

    public static void main(String[] args) {
        String originalString = "Hello, World!";
        String charactersToRemove = "loW";

        String modifiedString = removeChars(originalString, charactersToRemove);
        System.out.println(modifiedString); // Output: "He, rd!"
    }
}
