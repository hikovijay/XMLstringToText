import java.io.File;

public class DeleteFilesExceptSpecificFile {
    public static void main(String[] args) {
        // Specify the path to the folder
        String folderPath = "/path/to/your/folder";

        // Specify the name of the file to exclude
        String excludedFileName = "chromedriver.exe";

        // Create a File object representing the folder
        File folder = new File(folderPath);

        // Check if the folder exists
        if (folder.exists() && folder.isDirectory()) {
            // Get all files in the folder
            File[] files = folder.listFiles();

            // Check if there are any files
            if (files != null) {
                // Loop through the files and delete each one except the excluded file
                for (File file : files) {
                    if (file.isFile() && !isFileExcluded(file, excludedFileName)) {
                        if (file.delete()) {
                            System.out.println("Deleted file: " + file.getName());
                        } else {
                            System.out.println("Failed to delete file: " + file.getName());
                        }
                    }
                }

                System.out.println("All files in the folder, except the specified file, have been deleted.");
            } else {
                System.out.println("No files found in the folder.");
            }
        } else {
            System.out.println("The specified folder does not exist or is not a directory.");
        }
    }

    private static boolean isFileExcluded(File file, String excludedFileName) {
        return file.getName().equals(excludedFileName) || file.getName().endsWith(".exe");
    }
}
