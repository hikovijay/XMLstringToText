String originalString = "This is a string with three trailing tabs\t\t\t";
int tabsToTrim = 2; // Specify the number of tabs to trim

if (originalString.endsWith("\t")) {
    int length = originalString.length();
    int trimCount = 0;

    while (trimCount < tabsToTrim) {
        if (originalString.charAt(length - 1) == '\t') {
            length--;
            trimCount++;
        } else {
            break; // Exit the loop if a non-tab character is encountered
        }
    }

    originalString = originalString.substring(0, length);
}

System.out.println(originalString);
