import org.apache.poi.ss.usermodel.*;
import org.apache.poi.xssf.usermodel.XSSFWorkbook;

import java.io.File;
import java.io.FileOutputStream;
import java.io.IOException;

public class ExcelSheetDataDeleter {
    public static void main(String[] args) {
        try (Workbook workbook = WorkbookFactory.create(new File("existing.xlsx");
             FileOutputStream fos = new FileOutputStream("existing.xlsx")) {

            // Get the sheet from which you want to delete data (e.g., the first sheet)
            Sheet sheet = workbook.getSheetAt(0);

            // Iterate through each row and cell in the sheet and remove the cell contents
            for (Row row : sheet) {
                for (Cell cell : row) {
                    cell.setCellValue(""); // Clear the cell content
                }
            }

            // Write the changes back to the Excel file
            workbook.write(fos);

            System.out.println("Data in the sheet has been cleared successfully.");

        } catch (IOException e) {
            e.printStackTrace();
        }
    }
}
