public class StringToUTF8Converter {
    public static void main(String[] args) {
        String inputString = "This is a large string that we want to convert to UTF-8 format.";

        try {
            // Convert the string to bytes in UTF-8 format
            byte[] utf8Bytes = inputString.getBytes("UTF-8");

            // Now you can use the utf8Bytes for further processing or writing to a file, for example
            // If you want to convert it back to a string, you can do so using the constructor:
            String convertedString = new String(utf8Bytes, "UTF-8");

            // Print the converted string
            System.out.println("Original String: " + inputString);
            System.out.println("UTF-8 String: " + convertedString);
        } catch (java.io.UnsupportedEncodingException e) {
            System.err.println("UTF-8 encoding is not supported.");
            e.printStackTrace();
        }
    }
}
