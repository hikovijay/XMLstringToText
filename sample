import org.apache.poi.ss.usermodel.*;
import org.apache.poi.xssf.usermodel.XSSFWorkbook;

import java.io.File;
import java.io.FileInputStream;
import java.io.FileOutputStream;
import java.io.IOException;

public class ExcelSheetRenamer {
    public static void main(String[] args) {
        try (FileInputStream fis = new FileInputStream(new File("your_workbook.xlsx"));
             Workbook workbook = new XSSFWorkbook(fis);
             FileOutputStream fos = new FileOutputStream("your_workbook.xlsx")) {

            // Specify the old sheet name you want to rename
            String oldSheetName = "Sheet1";
            
            // Specify the new sheet name
            String newSheetName = "NewSheetName";

            // Get the sheet with the old name
            Sheet sheet = workbook.getSheet(oldSheetName);
            
            if (sheet != null) {
                // Rename the sheet
                workbook.setSheetName(workbook.getSheetIndex(sheet), newSheetName);
            } else {
                System.out.println("Sheet not found: " + oldSheetName);
            }

            // Write the changes back to the Excel file
            workbook.write(fos);

            System.out.println("Sheet renamed successfully.");

        } catch (IOException e) {
            e.printStackTrace();
        }
    }
}
