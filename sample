import org.apache.commons.io.FileUtils;
import java.io.File;
import java.io.IOException;

public class DeleteSpecificExcelFileInFolder {
    public static void main(String[] args) {
        // Define the path to the folder where you want to search for and delete the specific Excel file
        String folderPath = "your_folder_path_here";

        // Define the name of the specific Excel file you want to delete
        String targetFileName = "specific_file.xlsx";

        // Create a File object for the folder
        File folder = new File(folderPath);

        // Check if the folder exists and is a directory
        if (folder.exists() && folder.isDirectory()) {
            // List all files in the folder
            File[] files = folder.listFiles();

            if (files != null) {
                for (File file : files) {
                    // Check if the file has the specific name
                    if (file.isFile() && file.getName().equals(targetFileName)) {
                        // Delete the specific Excel file
                        try {
                            FileUtils.forceDelete(file);
                            System.out.println("Deleted specific Excel file: " + file.getName());
                        } catch (IOException e) {
                            System.err.println("Failed to delete specific Excel file: " + file.getName());
                            e.printStackTrace();
                        }
                    }
                }
            } else {
                System.out.println("No files found in the folder.");
            }
        } else {
            System.err.println("The specified folder does not exist or is not a directory.");
        }
    }
}
