import org.testng.annotations.DataProvider;
import org.testng.annotations.Test;

import java.io.File;
import java.io.FilenameFilter;
import java.util.ArrayList;
import java.util.List;

public class ExcelDataProviderTest {

    @DataProvider(name = "excelFileNames")
    public Object[][] getExcelFileNames() {
        String folderPath = "path_to_your_excel_files_folder";
        List<Object[]> data = new ArrayList<>();

        File folder = new File(folderPath);
        File[] files = folder.listFiles(new FilenameFilter() {
            @Override
            public boolean accept(File dir, String name) {
                return name.endsWith(".xlsx");
            }
        });

        for (File file : files) {
            data.add(new Object[] { file.getName() }); // Get the file name
        }

        Object[][] dataArray = new Object[data.size()][1];
        for (int i = 0; i < data.size(); i++) {
            dataArray[i][0] = data.get(i);
        }

        return dataArray;
    }

    @Test(dataProvider = "excelFileNames")
    public void testWithExcelFileNames(String excelFileName) {
        System.out.println("Excel file name: " + excelFileName);
        // You can open and process the Excel file with its name here.
    }
}
