JavascriptExecutor js = (JavascriptExecutor) driver;
js.executeScript("document.getElementById('yourTextAreaId').value = 'Your text';");
js.executeScript("document.getElementById('yourTextAreaId').dispatchEvent(new Event('change'));");

import org.openqa.selenium.JavascriptExecutor;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;

public class LargeStringInput {
    public static void main(String[] args) {
        // Set the path to the ChromeDriver executable
        System.setProperty("webdriver.chrome.driver", "path/to/chromedriver.exe");

        // Initialize the WebDriver
        WebDriver driver = new ChromeDriver();

        // Navigate to a webpage with a textarea element
        driver.get("https://example.com/some_page");

        // Large string to input
        String largeString = "This is a very large string..."; // Replace with your large string

        // Use JavaScript Executor to set the value of a textarea
        JavascriptExecutor js = (JavascriptExecutor) driver;
        js.executeScript("document.getElementById('yourTextAreaId').value = arguments[0];", largeString);

        // Optionally, submit the form or take further actions
        // js.executeScript("document.getElementById('yourFormId').submit();");

        // Close the WebDriver
        driver.quit();
    }
}
