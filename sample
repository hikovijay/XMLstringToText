import org.apache.poi.ss.usermodel.*;
import org.apache.poi.xssf.usermodel.XSSFWorkbook;

import java.io.FileInputStream;
import java.io.FileOutputStream;
import java.io.IOException;

public class UpdateExistingExcel {
    public static void main(String[] args) {
        // Specify the path to the existing Excel file
        String filePath = "path/to/your/existing/file.xlsx";

        try (FileInputStream fis = new FileInputStream(filePath);
             XSSFWorkbook workbook = new XSSFWorkbook(fis)) {

            // Get the sheet you want to modify (e.g., the first sheet at index 0)
            XSSFSheet sheet = workbook.getSheetAt(0);

            // Create a new row
            int rowIndex = sheet.getLastRowNum() + 1;
            Row row = sheet.createRow(rowIndex);

            // Create cells and set values in the row
            Cell cell1 = row.createCell(0);
            cell1.setCellValue("New Value1");

            Cell cell2 = row.createCell(1);
            cell2.setCellValue("New Value2");

            // Save the changes to the existing Excel file
            try (FileOutputStream fos = new FileOutputStream(filePath)) {
                workbook.write(fos);
            }

            System.out.println("Data updated in the existing Excel file.");

        } catch (IOException e) {
            e.printStackTrace();
        }
    }
}
