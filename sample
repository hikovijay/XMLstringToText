import org.apache.poi.ss.usermodel.*;

import java.io.File;
import java.io.FileInputStream;
import java.io.IOException;

public class ExcelColumnCheck {

    public static void main(String[] args) {
        String filePath = "path/to/your/excel/file.xlsx";
        String sheetName = "Sheet1"; // Change this to the actual sheet name
        String status = "Pass";
        String remarks = ""; // Initialize remarks as an empty string

        try {
            FileInputStream fileInputStream = new FileInputStream(new File(filePath));
            Workbook workbook = WorkbookFactory.create(fileInputStream);

            Sheet sheet = workbook.getSheet(sheetName);

            int columnToCheck = 0; // Assuming the column index is 0 (the first column)
            int startRow = 1; // Start searching from row 2

            for (int rowIndex = startRow; rowIndex <= sheet.getLastRowNum(); rowIndex++) {
                Row row = sheet.getRow(rowIndex);
                if (row != null) {
                    Cell cell = row.getCell(columnToCheck, Row.MissingCellPolicy.CREATE_NULL_AS_BLANK);
                    String cellValue = cell.getStringCellValue().trim(); // Assuming the cells contain strings

                    if ("Fail".equalsIgnoreCase(cellValue)) {
                        status = "Fail";
                        break; // Break out of the loop if "Fail" is found
                    }
                } else {
                    remarks = "error"; // Set remarks to "error" if the cell is missing
                }
            }

            workbook.close();
            fileInputStream.close();

            System.out.println("Overall Status: " + status);
            System.out.println("Remarks: " + remarks);
        } catch (IOException e) {
            e.printStackTrace();
        }
    }
}
