public static void trimTrailingTabs(StringBuilder sb, int numTabsToTrim) {
    int length = sb.length();
    int tabsTrimmed = 0;

    while (length > 0 && tabsTrimmed < numTabsToTrim) {
        if (sb.charAt(length - 1) == '\t') {
            sb.deleteCharAt(length - 1);
            tabsTrimmed++;
        } else {
            break; // Exit the loop if a non-tab character is encountered
        }
        length = sb.length();
    }
}

public static void main(String[] args) {
    StringBuilder sb = new StringBuilder("Some text with tabs at the end\t\t\t");
    int numTabsToTrim = 2; // Specify the number of tabs to trim
    trimTrailingTabs(sb, numTabsToTrim);
    System.out.println(sb.toString());
}
