import org.openqa.selenium.By;
import org.openqa.selenium.Keys;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;

public class PasteLargeStringWithSelenium {
    public static void main(String[] args) {
        // Set the path to the ChromeDriver executable
        System.setProperty("webdriver.chrome.driver", "path/to/chromedriver.exe");

        // Initialize the WebDriver
        WebDriver driver = new ChromeDriver();

        // Navigate to the webpage where you want to paste the large string
        driver.get("https://example.com");

        // Locate the input field or text area where you want to paste the string
        WebElement inputField = driver.findElement(By.id("your_input_element_id"));

        // Replace "your_large_string" with your actual large string
        String largeString = "your_large_string";

        // Split the string into smaller chunks (e.g., 100 characters) and send them sequentially
        int chunkSize = 100;
        for (int i = 0; i < largeString.length(); i += chunkSize) {
            int end = Math.min(i + chunkSize, largeString.length());
            String chunk = largeString.substring(i, end);
            inputField.sendKeys(chunk);
            inputField.sendKeys(Keys.chord(Keys.CONTROL, "a"), Keys.DELETE); // Clear the field before sending the next chunk
        }

        // Optionally, submit the form or perform other actions on the webpage
        // inputField.submit();

        // Close the WebDriver
        driver.quit();
    }
}
