import org.apache.poi.ss.usermodel.*;
import org.apache.poi.xssf.usermodel.XSSFWorkbook;
import java.io.*;
import java.util.ArrayList;
import java.util.Arrays;
import java.util.List;

public class ExcelStringSplitter {
    public static void main(String[] args) {
        String input = "<!-- Expected Results: KidneyFunction RiskClass 'Pending(17)', Urine ProteinAlbumin Risk Class NULL -->";

        // Remove "<!--", "Expected Results:", and "-->"
        input = input.replace("<!--", "").replace("Expected Results:", "").replace("-->", "");

        // Split by space and comma
        String[] parts = input.split("[, ]+");

        try {
            Workbook workbook = new XSSFWorkbook();
            Sheet sheet = workbook.createSheet("Results");

            Row row = sheet.createRow(0);
            for (int i = 0; i < parts.length; i++) {
                Cell cell = row.createCell(i);
                cell.setCellValue(parts[i]);
            }

            FileOutputStream fos = new FileOutputStream("output.xlsx");
            workbook.write(fos);

            fos.close();
            workbook.close();
            System.out.println("Data written to Excel successfully.");
        } catch (IOException e) {
            e.printStackTrace();
        }
    }
}
