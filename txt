    public static boolean areCellsMerged(Sheet sheet, int row1, int col1, int row2, int col2) {
        for (int i = 0; i < sheet.getNumMergedRegions(); i++) {
            CellRangeAddress mergedRegion = sheet.getMergedRegion(i);
            if (mergedRegion.isInRange(row1, col1) && mergedRegion.isInRange(row2, col2)) {
                return true;
            }
        }
        return false;
    }
